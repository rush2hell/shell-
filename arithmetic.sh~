#!/bin/bash
read -p "Enter the number 1: " a
read -p "Enter the number 2: " b

#Arithmetic
sum=`expr $a + $b`
echo "Sum = $sum"

#Multiplication
mul=`expr $a \* $b`
echo "Multiply = $mul"

#Subtract
sub=`expr $a - $b`
echo "Subtract = $sub"

#Division
div=`expr $a / $b`
echo "Division = $div"

#Mod-Division
mdiv=`expr $a % $b`
echo "Module-Division = $mdiv"

